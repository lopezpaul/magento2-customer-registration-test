<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Plugins on create account  -->
    <type name="Magento\Customer\Api\AccountManagementInterface">
        <plugin name="lopezpaul_customer_registration_clean_firstname_whitestpaces"
                type="LopezPaul\CustomerRegistration\Plugin\CleanFirstNameWhitespacesPlugin"
                sortOrder="10" disabled="false" />
    </type>
    <type name="Magento\Customer\Api\AccountManagementInterface">
        <plugin name="lopezpaul_customer_registration_log"
                type="LopezPaul\CustomerRegistration\Plugin\LogCustomerDataPlugin"
                sortOrder="20" disabled="false" />
    </type>
    <type name="Magento\Customer\Api\AccountManagementInterface">
        <plugin name="lopezpaul_customer_registration_send_email"
                type="LopezPaul\CustomerRegistration\Plugin\SendEmailPlugin"
                sortOrder="30" disabled="false" />
    </type>

</config>
